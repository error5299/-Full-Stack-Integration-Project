@page "/users"
@inject BlazorApiIntegration.Services.UserService UserService

<h3>User List</h3>

@if (users == null)
{
    <p>Loading...</p>
}
else
{
    <ul>
        @foreach (var user in users)
        {
            <li>@user.Name (@user.Email)</li>
        }
    </ul>
}

@code {
    private List<BlazorApiIntegration.Models.User> users;

    protected override async Task OnInitializedAsync()
    {
        users = await UserService.GetUsersAsync();
    }
}
